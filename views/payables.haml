%h2
  Payables for
  = "@#{a.login}"

%table.compact
  %thead
    %tr
      %th.right Points
      %th Details
      %th Time
  %tbody
    - recent.each do |p|
      %tr
        %td.right.monospace
          = format('%+0.2f', p[:points])
        %td
          = p[:text]
        %td{title: p[:created]}
          = RelativeTime.in_words(p[:created])

= partial(:paging, locals, page: page, list: recent)
