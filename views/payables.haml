%h2
  Payables for
  = "@#{a.login}"

%table.compact
  %thead
    %tr
      %th Time
      %th.right Points
      %th Details
  %tbody
    - recent.each do |p|
      %tr
        %td
          = p[:created]
        %td.right.monospace
          = format('%+0.2f', p[:points])
        %td
          = p[:text]

= partial(:paging, locals, page: page, list: recent)
